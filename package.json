{
  "name": "@world/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for @world/* package ecosystem",
  "scripts": {
    "build": "pnpm --filter \"@world/*\" run build",
    "test": "pnpm --filter \"@world/*\" run test",
    "dev": "pnpm --filter \"@world/*\" run dev",
    "lint": "pnpm --filter \"@world/*\" run lint",
    "clean": "pnpm --filter \"@world/*\" exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
